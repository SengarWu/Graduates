<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.mainFragment.MainActivityFragment"
    android:background="@mipmap/bg_main">


    <ImageView
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_start"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/btn_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_option"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_top"
        android:layout_toStartOf="@+id/btn_top"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/btn_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_help"
        android:layout_alignTop="@+id/btn_share"
        android:layout_toLeftOf="@+id/btn_share"
        android:layout_toStartOf="@+id/btn_share"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/btn_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/btn_top"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/btn_exit"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_top"
        android:src="@mipmap/btn_share"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/btn_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/btn_replay"
        android:padding="5dp"
        android:layout_below="@+id/btn_start"
        android:layout_toLeftOf="@+id/btn_ktplay"
        android:layout_toStartOf="@+id/btn_ktplay" />

    <ImageView
        android:id="@+id/btn_ktplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_share"
        android:src="@mipmap/btn_ktplay"
        android:padding="5dp" />
</RelativeLayout>
